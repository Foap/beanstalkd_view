<!doctype html>

<html>
  <head>
    <title>Beanstalkd View - <%= BeanstalkdView::VERSION %></title>
    <link rel="stylesheet" type="text/css" href="<%= url('/resources/bootstrap/css/bootstrap.min.css') %>"/>
    <link rel="stylesheet" type="text/css" href="<%= url('/resources/bootstrap/css/overrides.css') %>"/>
    <meta http-equiv="content-type" content="text/html;charset=utf-8" />
    <script type="text/javascript" src="<%= url('/resources/js/jquery-1.7.1.min.js') %>"></script>
    <script type="text/javascript" src="<%= url('/resources/bootstrap/js/bootstrap.min.js') %>"></script>
	<script type="text/javascript">
		<!-- Enable Tooltips -->
		$(document).ready(function() {
	    	$("[rel=tooltip]").tooltip();
		});
	</script>
  </head>
  <body>
	<!-- Header -->
	<div class="navbar">
	  <div class="navbar-inner">
	    <div class="container">
			<a class="brand" href="/beanstalkd">Beanstalkd View - <%= BeanstalkdView::VERSION %></a>
		</div>
	  </div>
	</div>
	
	<div class="container">
		
		<% if @message %>
			<div id='flash' class='notice'>
				<div class="row">
					<div class="span12">
						<div class="alert alert-notice">
						 <h4 class="alert-heading">Notice:</h4>
						  <%= @message %>
						</div>
					</div>
				</div>		
			</div>
		<% end %>
		
		<%= yield %>


		<!-- Footer -->
		<div class="row">
			<div class="span12"><hr/></div>
		</div>		
		<div class="row">
 		  <div class="span4">&nbsp;</div>
		  <div class="span4">
		      Powered by <a href="http://github.com/denniskuczynski/beanstalkd_view">Beanstalkd View</a>
		  </div>
 		  <div class="span4">&nbsp;</div>
		</div>
	</div>
  </body>
</html>